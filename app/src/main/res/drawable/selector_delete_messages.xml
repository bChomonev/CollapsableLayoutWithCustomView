<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Non focused states -->
    <item android:drawable="@drawable/icon_delete_messages" android:state_focused="false" android:state_pressed="false" android:state_checked="false"/>
    <item android:drawable="@drawable/icon_delete_messages" android:state_focused="false" android:state_pressed="false" android:state_checked="true"/>

    <!-- Focused states -->
    <item android:drawable="@drawable/icon_delete_messages" android:state_focused="true" android:state_pressed="false" android:state_checked="false"/>
    <item android:drawable="@drawable/icon_delete_messages" android:state_focused="true" android:state_pressed="false" android:state_checked="true"/>

    <!-- Pressed -->
    <!-- Non focused states -->
    <item android:drawable="@drawable/icon_delete_messages_pressed" android:state_focused="false" android:state_pressed="true" android:state_checked="false"/>
    <item android:drawable="@drawable/icon_delete_messages_pressed" android:state_focused="false" android:state_pressed="true" android:state_checked="true"/>

    <!-- Focused states -->
    <item android:drawable="@drawable/icon_delete_messages_pressed" android:state_focused="true" android:state_pressed="true" android:state_checked="false"/>
    <item android:drawable="@drawable/icon_delete_messages_pressed" android:state_focused="true" android:state_pressed="true" android:state_checked="true"/>

</selector>