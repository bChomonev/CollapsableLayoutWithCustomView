<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@color/background_header">

    <TextView
        android:id="@+id/action_bar_tv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:singleLine="true"
        android:text="My Custom Toolbar"
        android:textColor="@color/custom_black"
        android:textSize="17sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/custom_backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dp"
        android:paddingLeft="5dp"
        android:src="@drawable/drawer_icon"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/custom_btn_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/search_icon"
        android:paddingRight="5dp"
        android:src="@drawable/selector_delete_messages"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="11dp"
        android:src="@drawable/selector_icon_search" />
</RelativeLayout>